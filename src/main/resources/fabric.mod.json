{
  "schemaVersion": 1,
  "id": "ironfurnaces",
  "version": "${version}",

  "name": "Iron Furnaces",
  "description": "A simple mod that adds higher tiered furnaces.",
  "authors": [
    "FutureLizard205"
  ],
  "contact": {
    "homepage": "https://github.com/FutureLizard205/",
    "sources": "https://github.com/FutureLizard205/bta-IronFurnacesMod",
		"issues": "https://github.com/FutureLizard205/bta-IronFurnacesMod/issues"
  },

  "license": "CC0-1.0",

  "environment": "*",
  "entrypoints": {
    "main": [
      "fl205.ironfurnaces.IronFurnaces"
    ],
		"beforeGameStart": [
			"fl205.ironfurnaces.IronFurnaces"
		],
		"afterGameStart": [
			"fl205.ironfurnaces.IronFurnaces"
		],
		"recipesReady": [
			"fl205.ironfurnaces.IronFurnacesRecipes"
		],
		"initModels": [
			"fl205.ironfurnaces.IronFurnacesBlockModels"
		],
		"btwaila": [
			"fl205.ironfurnaces.modded.BTWaila.WailaPlugin"
		]
  },

  "depends": {
    "fabricloader": ">0.15.5",
		"halplibe": ">=5.1.1"
  },
	"suggests": {
		"btwaila": ">=1.1.2-7.2-pre2"
	},
  "icon": "icon.png"
}
